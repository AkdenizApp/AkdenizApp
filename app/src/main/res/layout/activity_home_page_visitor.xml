<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomePageVisitor" android:orientation="vertical" android:gravity="center|top">

    <TextView
            android:text="Akdeniz University"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="24sp" tools:layout_editor_absoluteY="197dp" tools:layout_editor_absoluteX="88dp"
            tools:ignore="MissingConstraints" android:layout_margin="20dp"/>
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="310dp"
            android:layout_height="310dp" tools:layout_editor_absoluteY="292dp" tools:layout_editor_absoluteX="72dp"
            app:columnCount="4" tools:ignore="MissingConstraints" app:rowCount="4" >

        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:layout_row="0"
                app:layout_column="0"
                android:background="@drawable/akdeniz_logo"
                android:id="@+id/announcements_button" android:contentDescription="TODO"/>
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:layout_row="0"
                android:background="@drawable/akdeniz_logo"
                app:layout_column="1" android:id="@+id/events"/>
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/akdeniz_logo"
                app:layout_row="0"
                app:layout_column="2" android:id="@+id/complaints_button_visitor"/>
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/akdeniz_logo"
                android:id="@+id/zerothree" app:layout_row="0" app:layout_column="3"/>
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/akdeniz_logo"
                android:id="@+id/shuttle" app:layout_row="2" app:layout_column="0"/>
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/akdeniz_logo"
                android:id="@+id/feedback" app:layout_row="2" app:layout_column="1"/>
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/akdeniz_logo"
                android:id="@+id/classes" app:layout_row="2" app:layout_column="2"/>
        <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/akdeniz_logo"
                android:id="@+id/twothere" app:layout_row="2" app:layout_column="3"/>

        <TextView
                android:text="Duyurular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="0"
                android:id="@+id/textView"/>
        <TextView
                android:text="Etkinlikler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="1"
                android:id="@+id/textView2"/>
        <TextView
                android:text="Şikayetler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="2"
                android:id="@+id/textView4"/>
        <TextView
                android:text="Okul Haritası"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_row="1" app:layout_column="3"
                android:id="@+id/textView5"/>
    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>